<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mining_analyzer_ritase_form_view" model="ir.ui.view">
            <field name="name">sr.mining.analyzer.ritase.form.view</field>
            <field name="model">mining.analyzer.ritase</field>
            <field name="arch" type="xml">
                <form string="Ritase Analizer">
                    <group>
                        <p>
                            Analyze your data to find input fault or anomaly
                        </p>
                    </group>
                    <group>
                        <group>
                            <field name="production_config_id" invisible="1" />
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_analyze" string="Analyze" class="oe_highlight"
                                type="object"/>
                        Or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_mining_analyzer_ritase_wizard" model="ir.actions.act_window">
            <field name="name">Water Truck Report</field>
            <field name="res_model">mining.analyzer.ritase</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_mining_analyzer_ritase_wizard"
                  name="Ritase Analizer"
                  action="action_mining_analyzer_ritase_wizard"
                  parent="menu_mining_analyzer"
                  sequence="2"/>
    </data>
</odoo>
